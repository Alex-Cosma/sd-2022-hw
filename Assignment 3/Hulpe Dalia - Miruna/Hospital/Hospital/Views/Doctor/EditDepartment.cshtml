@model DoctorViewModel

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<div>
    <table class="table table-striped table-borderless table-responsive-sm ">
        <thead>
            <tr class="table-head">
                <th>Department</th>
                <th>Choose</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Departments.Count; i++)
            {
                <tr>
                    <td class="table-element-custom">@Model.Departments[i].Name</td>
                    <td class="table-element-custom">
                        @if (Model.Department == null || !Model.Departments[i].Name.Equals(Model.Department.Name))
                        {
                            <a asp-controller="Doctor" asp-action="ChangeDepartment" asp-route-departmentId="@Model.Departments[i].Id" asp-route-doctorId="@Model.Id" style="color:black">
                                Select
                            </a>
                        }
                        else
                        {
                            <p style="color:turquoise">Selected</p>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
