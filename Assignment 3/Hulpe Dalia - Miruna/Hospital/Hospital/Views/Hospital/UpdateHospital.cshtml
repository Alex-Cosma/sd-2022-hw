@model HospitalEditViewModel
<form asp-controller="Hospital" asp-action="UpdateHospital" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <label asp-for="Name"></label><br>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-info">Update Hospital</button>
</form>
<h2>Departments</h2>
<table class="table table-striped table-borderless table-responsive-sm ">
    <thead>
        <tr class="table-head">
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.AllDepartments.Count; i++)
        {
            <tr>
                <td class="table-element-custom">@Model.AllDepartments[i].Name</td>
                <td class="table-element-custom">
                    <a asp-controller="Hospital" asp-action="AddHospitalDepartments" asp-route-idH="@Model.Id" asp-route-idD="@Model.AllDepartments[i].Id" style="color:black">
                        <i>+</i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<table class="table table-striped table-borderless table-responsive-sm ">
    <thead>
        <tr class="table-head">
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.ContainingDepartments.Count; i++)
        {
            <tr>
                <td class="table-element-custom">@Model.ContainingDepartments[i].Name</td>
            </tr>
        }
    </tbody>
</table>

<h2>Doctors</h2>
<table class="table table-striped table-borderless table-responsive-sm ">
    <thead>
        <tr class="table-head">
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.AllDoctors.Count; i++)
        {
            <tr>
                <td class="table-element-custom">@Model.AllDoctors[i].Email</td>
                <td class="table-element-custom">
                    <a asp-controller="Hospital" asp-action="AddDoctors" asp-route-idD="@Model.AllDoctors[i].Id" asp-route-idH="@Model.Id" style="color:black">
                        <i>+</i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<table class="table table-striped table-borderless table-responsive-sm ">
    <thead>
        <tr class="table-head">
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.ContainingDoctors.Count; i++)
        {
            <tr>
                <td class="table-element-custom">@Model.ContainingDoctors[i].Email</td>
            </tr>
        }
    </tbody>
</table>

