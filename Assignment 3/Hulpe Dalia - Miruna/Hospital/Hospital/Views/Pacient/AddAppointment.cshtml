@model AppointmentAddViewModel

<h2>Doctors</h2>
<table class="table table-striped table-borderless table-responsive-sm ">
    <thead>
        <tr class="table-head">
            <th>Doctor</th>
            <th>Hospital</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Details.Count; i++)
        {
        <tr>
            <td class="table-element-custom">@Model.Details[i].Email</td>
            <td class="table-element-custom">@Model.Details[i].Hospital.Name</td>
            <td class="table-element-custom">@Model.Details[i].Department.Name</td>
        </tr>
        }
    </tbody>
</table>

<form asp-controller="Pacient" asp-action="AddAppointment" method="post">
    <div class="form-group row">
        <label asp-for="DateTime"></label><br>
        <input type="date" asp-for="DateTime" min="@DateTime.Now" class="form-control" autocomplete="off" />
        <span asp-validation-for="DateTime" class="text-danger"></span>
    </div>
    <div>
        <select asp-for="@Model.Doctor.Id" class="form-control" asp-items="@Model.Doctors">
        </select>
    </div>
    <button type="submit" class="btn btn-info">Add appointment</button>
</form>