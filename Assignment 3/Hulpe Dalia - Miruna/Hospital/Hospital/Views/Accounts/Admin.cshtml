                        <i class="fa fa-pencil-square-o"></i>
                    </a>
                    <a asp-controller="Department" asp-action="DeleteDepartment" asp-route-id="@Model.Departments[i].Id" style="color:black">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
