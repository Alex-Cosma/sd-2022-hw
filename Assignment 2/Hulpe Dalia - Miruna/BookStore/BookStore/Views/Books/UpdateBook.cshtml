@model EditBookViewModel
<form asp-controller="Books" asp-action="UpdateBook" method="post">
    <input type="hidden" asp-for="OldBook" />
    <input asp-for="NewBook.Id" class="form-control" />
    <div class="form-group row">
        <label asp-for="NewBook.Title"></label><br>
        <input asp-for="NewBook.Title" class="form-control" />
        <span asp-validation-for="NewBook.Title" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="NewBook.Author"></label>
        <input asp-for="NewBook.Author" class="form-control" />
        <span asp-validation-for="NewBook.Author" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="NewBook.Genre"></label>
        <input asp-for="NewBook.Genre" class="form-control" />
        <span asp-validation-for="NewBook.Genre" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="NewBook.Quantity"></label>
        <input asp-for="NewBook.Quantity" class="form-control" />
        <span asp-validation-for="NewBook.Quantity" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="NewBook.Price"></label>
        <input asp-for="NewBook.Price" class="form-control" />
        <span asp-validation-for="NewBook.Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-info">Update book</button>
</form>