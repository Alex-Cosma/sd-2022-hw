@model AdminViewModel

    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
<form asp-controller="Books" asp-action="AddBook" method="get">
    <button type="submit" class="btn btn-info">Add new book</button>
</form>
<form asp-controller="Books" asp-action="GetSoldOutBooks" method="get">
    <button type="submit" class="btn btn-info">Get sold out books file</button>
</form>
<div>
    <table class="table table-striped table-borderless table-responsive-sm">
        <thead>
            <tr class="table-head">
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Genre</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Books.Count; i++)
            {
            <tr>
                <td class="table-element-custom">@Model.Books[i].Id</td>
                <td class="table-element-custom">@Model.Books[i].Title</td>
                <td class="table-element-custom">@Model.Books[i].Author</td>
                <td class="table-element-custom">@Model.Books[i].Genre</td>
                <td class="table-element-custom">@Model.Books[i].Price</td>
                <td class="table-element-custom">@Model.Books[i].Quantity</td>
                <td class="table-element-custom">
                    <a asp-controller="Books" asp-action="UpdateBook" asp-route-id="@Model.Books[i].Id" style="color:black">
                        <i class="fa fa-pencil-square-o"></i>
                    </a>

                    <a asp-controller="Books" asp-action="DeleteBook" asp-route-id="@Model.Books[i].Id" style="color:black">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

<form asp-controller="Accounts" asp-action="AddUser" method="get">
    <button type="submit" class="btn btn-info">Add new user</button>
</form>
<div>
    <table class="table table-striped table-borderless table-responsive-sm " >
        <thead>
            <tr class="table-head">
                <th>Email</th>
                <th>UserName</th>
                <th>AccessFailCount</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Users.Count; i++)
            {
                <tr>
                    <td class="table-element-custom">@Model.Users[i].Email</td>
                    <td class="table-element-custom">@Model.Users[i].UserName</td>
                    <td class="table-element-custom">@Model.Users[i].AccessFailedCount</td>
                    <td class="table-element-custom">
                        <a asp-controller="Accounts" asp-action="UpdateUser" asp-route-email="@Model.Users[i].Email" style="color:black">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>

                        <a asp-controller="Accounts" asp-action="DeleteUser" asp-route-email="@Model.Users[i].Email" style="color:black">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
